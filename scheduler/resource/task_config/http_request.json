{
  "default": {
    "name": "http_request",
    "phase": ["verification", "regular"],
    "url_template": "",
    "method": "get",
    "headers": {},
    "repeat_number": 0,
    "body": ""
  },
  "tasks": [
    {
      "name": "ping",
      "request_type": "http",
      "http_method": "get",
      "repeat_number": 10,
      "url_template": "https://{{component_ip}}/_ping",
      "condition" : "{{node_type}}=='node'&& blockchain=='eth'"
    },
    {
      "name": "latest_block",
      "type": "rpc",
      "http_method": "post",
      "url_template": "https://{{component_ip}}/",
      "headers": {},
      "body": {
        "jsonrpc": "2.0",
        "method": "eth_getBlockByNumber",
        "params": [
          "latest",
          true
        ],
        "id": 1
      }
    }
  ]
}